// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model appointment {
  id             Int    @id @default(autoincrement())
  firstName      String
  lastName       String
  address        String
  age            Int
  email          String
  gender         String
  phoneNumber    String
  bookingDate    String
  Specialization String
  bookingTime    String
  userId         String
  createdAt      DateTime @default(now())
  user           user@relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
  DOCTOR
}
model user {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  phoneNumber    String   @unique
  role           Role[]
  address_1      String
  address_2      String
  specialty      String?
  hashedPassword String   @map("hashed_password")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt()
  appointment    appointment[]
}

model event {
  id          String  @id @default(uuid())
  title       String
  start    String
  end      String
  allDay      Boolean
}
