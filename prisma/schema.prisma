// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model appointment {
  id             Int    @id @default(autoincrement())
  firstName      String
  lastName       String
  address        String
  age            Int
  email          String @unique
  gender         String
  phoneNumber    String @unique
  bookingDate    String
  Specialization String
  bookingTime    String
}

enum Role {
  ADMIN
  DOCTOR
  CLEARK
}
model user {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  email          String   @unique
  phoneNumber    String   @unique
  role           String
  address_1      String
  address_2      String
  specialty      String
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt()
  docRecipt docRecipt[]
}

model receipt {
  id          String    @id @default(uuid())
  description String
  amount      Decimal
  date        String
  expense     expense[]
}

model expense {
  id          String  @id @default(uuid())
  description String
  receiptId   String
  amount      Decimal
  date        String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  receipt receipt @relation(fields: [receiptId], references: [id])
}

model docRecipt {
  id          String  @id @default(uuid())
  description String
  amount      Decimal
  date        String
  doctorId    String
  user        user  @relation(fields: [doctorId], references: [id])
}
