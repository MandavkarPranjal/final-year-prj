// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model appointment {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  address     String
  age         Int
  gender      String
  phoneNumber String   @unique
  bookingDate String
  bookingTime String
}

model user {
  id              String @id @default(uuid())
  firstName       String
  lastName        String
  email           String @unique
  phoneNumber     String @unique
  role            String
  address_1       String
  address_2       String
  hashedPassword  String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt()
  doctors         doctor[]
}

model doctor {
  id              String @id @default(uuid())
  specialty       String
  userId          String
  user            user @relation(fields: [userId], references: [id])
}
